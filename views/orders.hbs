<h1>My orders</h1>


<div id="card">
{{!-- {{ check: if there are any orders}} --}}
{{#if orders.length}}

{{!-- {{display content}} --}}

    {{#each orders}}{{!-- {{iterate the "orders" array}} --}}

    {{!-- {{ template to display on the screen: materializecss.com -> components -> cards}} --}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            <small>Order:  {{_id}} </small>
                        </span>

                        <p class="date">{{date}}</p>
                        <p><em>{{user.name}}</em> ({{user.userId.email}})</p>

                        <ol>
                            {{#each courses}}
                            <li>{{course.title}} (x<strong>{{count}}</strong>)</li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Price:</p> <span class="price">{{price}}</span>
                            {{log this}}

                    </div>
                </div>
            </div>
        </div>

    {{/each}}
    {{else}}
<p>No orders</p>

{{/if}}
</div>